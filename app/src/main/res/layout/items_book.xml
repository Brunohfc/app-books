<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/text_view_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/text_view_bookTitle"
        app:layout_constraintTop_toBottomOf="@id/text_view_bookTitle"
        android:text="Terror"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:background="@drawable/rounded_label_teal"
        />
    <TextView
        android:id="@+id/text_view_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingStart="8sp"
        app:layout_constraintStart_toEndOf="@id/text_view_genre"
        app:layout_constraintTop_toBottomOf="@id/text_view_bookTitle"
        android:text="MAchadinho"

        />

    <ImageView
        android:id="@+id/imageView_favorite"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view_author"
        />

</androidx.constraintlayout.widget.ConstraintLayout>